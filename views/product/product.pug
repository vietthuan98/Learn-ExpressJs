extends ../layouts/common.pug

block content
	.d-flex.justify-content-between.mb-4
		h1 Product
		form.form-groupd.d-flex(action='/product/search' method='get')
			input.form-control(type='text' name='' )
			button.btn.btn-primary.ml-2 Search
	.row
		each product in products
			.col-md-3.mb-3
				.card(style='width: 13rem;')
					img.card-img-top(src= product.image alt='...')
					.card-body
						h5.card-title= product.name
						p.overflow-auto.card-text= product.description
						a.btn.btn-primary(href='#') Go somewhere
	nav.mt-3.d-flex.justify-content-center(aria-label='...')
		ul.pagination
			li.page-item.disabled
				a.page-link(href='#', tabindex='-1', aria-disabled='true') Previous
			li.page-item
				a.page-link(href='?page=1') 1
			li.page-item
				a.page-link(href='?page=2') 2 
			li.page-item
				a.page-link(href='?page=3') 3
			li.page-item
				a.page-link(href='#') Next
			